---
import MainLayout from "@/layouts/TheMainLayout.astro"
import AboutMe from "@components/sections/AboutMe.astro"
import Experience from "@components/Experience.astro"
import TheCard from "@components/ui/TheCard.astro"
---

<MainLayout
  title='WebFerrol: programación y diseño web'
>
  <main class='flex flex-col sm:gap-10 sm:flex-row p-6 max-w-6xl m-auto'>
    <aside
      class='flex flex-col justify-start items-center gap-4 sm:w-2/4 w-auto'
    >
      <div class='sticky top-2'>
        <AboutMe />
      </div>
    </aside>

    <div class='grid gap-8 w-full mt-10'>
      <TheCard
        title='Programador y diseñador web.'
        class='text-light-subheading dark:text-dark-subheading'
      >
        <div>
          <p class='text-pretty'>
            <strong class='text-highlighted dark:text-highlighted-dark'
              >Informático</strong
            > y <strong class='text-highlighted dark:text-highlighted-dark'
              >programador</strong
            >. Entusiasta de la <mark
              class='text-highlighted dark:text-highlighted-dark font-thin bg-transparent'
              >divulgación</mark
            >, <mark
              class='text-highlighted dark:text-highlighted-dark font-thin bg-transparent'
              >educación</mark
            > y <mark
              class='text-highlighted dark:text-highlighted-dark font-thin bg-transparent'
              >formación</mark
            > en el desarrollo de <strong
              class='text-highlighted dark:text-highlighted-dark'
              >aplicaciones web</strong
            >.
          </p>
        </div>
      </TheCard>
      <TheCard title='Experiencia laboral'>
        <Experience />
      </TheCard>
    </div>
  </main>
</MainLayout>
