---
import { TheHeader, UpLink } from '../components'
import { urlBase } from '../constants'
import '../styles/global.css'
import '@fontsource/onest/400.css'
import '@fontsource/onest/700.css'

interface Props {
  title: string,
	description?: string,
  ogImage?: string
}

const { title, description = 'Webferrol', ogImage } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta property="og:image" content={ogImage?? urlBase + 'avatar.webp'} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body id="top" class="bg-bg dark:bg-bg-dark text-text dark:text-text-dark">
    <TheHeader />
    <slot />
    <UpLink />
  </body>
</html>
