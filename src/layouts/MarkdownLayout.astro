---
import '@/styles/markdown.css'
import MainLayout from "@/layouts/TheLayout.astro"
import Markdown from "@components/sections/Markdown.astro"


const {  
  frontmatter : { 
    author,
    description, 
    email,
    ogImage,
    pubDate,
    title
  }
} = Astro.props
---

<MainLayout title={title} description={description} ogImage={ogImage}>
  <Markdown
    title={title}
    description={description}
    pubDate={pubDate}
    email={email}
    author={author}
  >
    <slot />
  </Markdown>
</MainLayout>
