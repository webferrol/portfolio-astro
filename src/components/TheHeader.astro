---
import ThemeIcon from './ThemeIcon.astro'
import { School, Tags } from '../icons';
---

<header
  class='relative flex justify-between items-center p-3 bg-slate-400/25 dark:bg-zinc-900'
>
  <nav>
    <a href='/'>
      <h1 class='whitespace-nowrap text-xl font-extrabold text-gray-900 dark:text-white md:text-3xl lg:text-4xl'>
        Web <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Developer</span>
      </h1>
    </a>
    <ul
      class='max-w-screen-xl flex flex-wrap items-center justify-between gap-2 mx-auto p-4'
    >
      <li>
        <a
          class='flex items-center space-x-3 rtl:space-x-reverse text-link hover:text-highlighted dark:text-link-dark dark:hover:text-highlighted-dark'
          href='/blog/'
        >
          <School />
          <span class='inline-bock py-2'>Entradas</span>
        </a>
      </li>
      <li>
        <a
          class='flex items-center space-x-3 rtl:space-x-reverse text-link hover:text-highlighted dark:text-link-dark dark:hover:text-highlighted-dark'
          href='/tags/'
        >
          <Tags />
          <span class='inline-bock py-2'>Etiquetas</span>
        </a>
      </li>
    </ul>
  </nav>
  <ThemeIcon />
</header>
