---
import { SubHeading } from "../components"

interface Props {
  title: string,
  pubDate: string,
  description: string,
  email: string,
  author: string
}

const { title, pubDate, description, email, author } = Astro.props
---
<section class="p-10 markdown">
  <header>
    <SubHeading>
      {title}
    </SubHeading>
    <time>{pubDate?.slice(0, 10)}</time>
    <p>{description}</p>
  </header>
  <address class="font-semibold">
    Autor:
    <a class="text-link dark:text-link-dark hover:underline" href={`mailto:${email}`}>
      {author}
    </a>
  </address>
  <slot />
</section>

<style>
.markdown {
  --global-body-size: clamp(
    1em, 
    calc(2 / 72 * 100vw), 
    1.6em
  );

  --global-h1-size: clamp(
    1.6em, 
    calc(3 / 72 * 100vw), 
    3em
  );

  --global-h2-size: clamp(
    1.4em, 
    calc(2.4 / 72 * 100vw), 
    2.4em
  );

  --global-h3-size: clamp(
    1.2em, 
    calc(2.2 / 72 * 100vw), 
    2.2em
  );

  --global-h4-size: clamp(
    1.1em, 
    calc(1.8 / 72 * 100vw), 
    1.8em
  );

   font-size: var(--global-body-size);
    margin: 0 auto;
    max-width: 60rem;
}

.markdown pre {
      background-color: #333;
      font-size: calc(var(--global-body-size) - 1vw);
    }
  
.markdown pre,
.markdown code {
  font-family: Menlo, Monaco, "Courier New", monospace;
}
