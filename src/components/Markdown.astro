---
import { SubHeading } from "../components"

interface Props {
  title: string,
  pubDate: string,
  description: string,
  email: string,
  author: string
}

const { title, pubDate, description, email, author } = Astro.props
---
<section class="p-10 mark-down">
  <header>
    <SubHeading>
      {title}
    </SubHeading>
    <time>{pubDate?.slice(0, 10)}</time>
    <p>{description}</p>
  </header>
  <address class="font-semibold">
    Autor:
    <a class="text-link dark:text-link-dark hover:underline" href={`mailto:${email}`}>
      {author}
    </a>
  </address>
  <slot />
</section>

