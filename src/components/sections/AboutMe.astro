---
import SocialLink from '@components/ui/SocialLink.astro'
import Technologies from '@components/sections/Technologies.astro'
import LinkedIn from '@icons/LinkedIn.astro'
---
<figure class="relative mb-6">
  <img
    class="w-full bg-cover aspect-auto block m-auto rounded-full"
    src="/avatar.webp"
    alt="Xurxo González Tenreiro"
  />
  <figcaption class="absolute bottom-1 w-full text-center text-xs">Xurxo González Tenreiro</figcaption>
</figure>
<div class="grid gap-4">
  <section>
    <h2 class="subtitle pb-2" id="tecnologias">Tecnologías</h2>
    <Technologies />
  </section>
  <section>
    <h2 class="subtitle pb-2">Sígueme</h2>
    <nav aria-label="Redes Sociales" class="flex flex-wrap gap-2">
      <SocialLink href="https://www.linkedin.com/in/webferrol/">
        <LinkedIn class="w-9 h-9 text-[#0A66C2] hover:text-current" />
      </SocialLink>
    </nav>
  </section>
</div>